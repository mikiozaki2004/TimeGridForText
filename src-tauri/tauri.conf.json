{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "TimeGrid Desktop",
  "version": "0.1.0",
  "identifier": "com.timegrid.desktop",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "TimeGrid Desktop",
        "label": "main",
        "width": 400,
        "height": 600,
        "minWidth": 360,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
